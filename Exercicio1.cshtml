@{
    ViewData["Title"] = "Nossos Serviços Natalinos";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold" style="color: #c41e3a;">🎄 Nossos Serviços Natalinos</h1>
        <p class="lead" style="color: #2d5016;">Soluções mágicas para tornar seu Natal inesquecível</p>
    </div>

    <!-- Filtro por Categoria -->
    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <label for="categoriaServico" class="form-label fw-bold" style="color: #c41e3a;">Filtrar por categoria:</label>
            <select id="categoriaServico" class="form-select" onchange="filtrarServicos()" style="border-color: #2d5016;">
                <option value="todos" selected>Todos os serviços</option>
                <option value="decoracao">Decoração</option>
                <option value="entretenimento">Entretenimento</option>
                <option value="gastronomia">Gastronomia</option>
                <option value="logistica">Logística</option>
            </select>
        </div>
    </div>

    <!-- Cards de Serviços -->
    <div class="row g-4" id="servicos-container">
        <!-- Os serviços serão carregados via JavaScript -->
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-5 p-4 rounded" style="background: linear-gradient(135deg, #2d5016 0%, #1a2f0d 100%); color: white;">
        <h3 class="mb-3">🎅 Pronto para um Natal mágico?</h3>
        <p class="mb-4" style="color: #f0f8e8;">Entre em contato conosco e solicite um orçamento personalizado</p>

        <div class="d-flex flex-column flex-md-row justify-content-center align-items-center gap-4 mb-3">
            <div class="d-flex align-items-center">
                <span class="me-2" style="color: #ffd700;">📧</span>
                <strong>natal@lifeevents.test</strong>
            </div>

            <div class="d-flex align-items-center">
                <span class="me-2" style="color: #ffd700;">📱</span>
                <strong>(11) 99999-0000</strong>
            </div>
        </div>

        <div class="mt-2">
            <small style="color: #c8e6c9;">
                🎁 Presenteie sua família com o melhor Natal!
            </small>
        </div>
    </div>
</div>

